<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".schedules.SchedulesFragment">
    <devs.mulham.horizontalcalendar.HorizontalCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:textColorSelected="#FFFF" tools:ignore="MissingConstraints"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/schedules_recycler"
            android:layout_width="match_parent"
            android:layout_height="628dp"
            android:scrollbars="vertical"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"/>
    <TextView
            android:id="@+id/no_event"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="No event for today!"
              android:textSize="30dp"
              android:visibility="gone"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/calendarView" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="@+id/schedules_recycler"
              app:layout_constraintStart_toStartOf="@+id/schedules_recycler"
              app:layout_constraintEnd_toEndOf="@+id/schedules_recycler" android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>