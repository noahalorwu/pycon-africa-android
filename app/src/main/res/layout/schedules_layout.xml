<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
>

    <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="10:30 am"
            android:textSize="10sp"
            android:textColor="#68BB59"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="21dp" app:layout_constraintBottom_toBottomOf="@+id/end_time"/>
    <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="11:00 am"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#EE3E34"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.647"/>

    <TextView
            android:id="@+id/talk_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Talk/Workshop Title/Breakfast"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintStart_toEndOf="@+id/start_time"
            android:layout_marginStart="44dp"/>

    <TextView
            android:id="@+id/talk_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akuffo Room 101"
            android:drawableStart="@drawable/mlocation"
            android:textSize="8sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/talk_title"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.394"
            app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>