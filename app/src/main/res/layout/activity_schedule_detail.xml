<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".schedules.ScheduleDetailActivity">

    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Python Mixed with Django in one Soup"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tvDesc"/>
    <TextView
            android:id="@+id/tvStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30 am"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/tvEnd"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.147"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tvDesc"/>

    <TextView
            android:id="@+id/tvEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:30 am"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tvDesc"/>
    <TextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_conference"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            tools:layout_editor_absoluteX="0dp" android:layout_marginBottom="116dp"
            app:layout_constraintBottom_toTopOf="@+id/sProfileView"/>
    <TextView
            android:id="@+id/tvLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hall one"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/tvEnd"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/tvStart"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.342" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tvDesc" app:layout_constraintVertical_bias="1.0"/>

    <Button
            android:id="@+id/sProfileView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="View Speakers Profile"
            tools:layout_editor_absoluteX="0dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>