<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".schedules.ScheduleDetailActivity"
        android:fitsSystemWindows="true"
>
    <ImageView
            android:id="@+id/bgspon"
            android:layout_width="wrap_content"
            android:layout_height="227dp"
            android:background="@drawable/schedulebg"
            tools:ignore="ContentDescription"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
    />
    <ImageView android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/home"
               android:id="@+id/imageView3" android:layout_marginTop="24dp"
               app:layout_constraintTop_toBottomOf="@+id/bgspon"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="280dp"
    />

    <ImageView android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/alarmclock"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
               android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/bgspon"
               android:id="@+id/imageView2"/>
    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Python Mixed with Django in one Soup"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#0B89C6"
            android:layout_marginTop="92dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="58dp" app:layout_constraintBottom_toBottomOf="@+id/bgspon"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/bgspon" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/bgspon" app:layout_constraintHorizontal_bias="0.583"/>
    <TextView
            android:id="@+id/tvStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30 am"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="2sp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/bgspon"
            app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="8dp"/>

    <TextView
            android:id="@+id/tvEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:30 am"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="2sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tvStart" android:layout_marginStart="16dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/bgspon"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tvDesc"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_conference"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="2sp"
            android:scrollbars="vertical"
            style="@android:style/TextAppearance.DeviceDefault.Medium"

            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/bgspon"/>
    <TextView
            android:id="@+id/tvLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hall one"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="2sp"
            android:textStyle="bold"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/bgspon"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.875"/>

    <Button
            android:id="@+id/sProfileView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="View Speakers Profile"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>