<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:fitsSystemWindows="true"
>

    <ImageView
            android:id="@+id/display_img"
            android:layout_width="76dp"
            android:layout_height="69dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/sponsor_name"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="Name"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/display_img"
            app:layout_constraintStart_toEndOf="@+id/display_img"
            android:layout_marginStart="12dp"/>
    <TextView
            android:id="@+id/sponsor_level"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="Package"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toTopOf="@+id/sponsor_name"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/display_img"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/display_img"
            android:layout_marginStart="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>