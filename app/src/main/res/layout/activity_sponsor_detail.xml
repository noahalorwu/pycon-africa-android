<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".sponsors.SponsorDetailActivity"

>
    <ImageView
            android:id="@+id/bgspon"
            android:layout_width="437dp"
            android:scaleType="fitCenter"
            android:layout_height="227dp"
            android:background="@drawable/sponsorbg"
            tools:ignore="ContentDescription"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
    />
    <ImageView
            android:id="@+id/sLogo"
            android:layout_width="157dp"
            android:scaleType="fitCenter"
            android:layout_height="118dp"
            tools:ignore="ContentDescription"
            app:layout_constraintStart_toStartOf="@+id/bgspon" app:layout_constraintEnd_toEndOf="@+id/bgspon"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/bgspon"
            app:layout_constraintVertical_bias="0.402" app:layout_constraintHorizontal_bias="0.496"/>
    <TextView
            android:id="@+id/sName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sponsor_name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/bgspon"/>
    <TextView
            android:id="@+id/sPackage"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="@string/sponsor_level"
            android:paddingEnd="20dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sName"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
    />
    <TextView
            android:id="@+id/sDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hhhhhhh"
            android:textSize="16sp"
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:autoLink="web"
            android:layout_marginBottom="328dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.027"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sPackage"
            app:layout_constraintVertical_bias="0.579"/>

</androidx.constraintlayout.widget.ConstraintLayout>