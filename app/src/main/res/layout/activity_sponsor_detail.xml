<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="africa.pycon.pyconafrica.sponsors.SponsorDetailActivity"
    >

    <ImageView
            android:id="@+id/sLogo"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/sName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real Python"
            android:paddingTop="250dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="296dp"
    />
    <TextView
            android:id="@+id/sPackage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bronze"
            android:paddingTop="250dp"
            tools:layout_editor_absoluteY="40dp"
            tools:layout_editor_absoluteX="53dp" tools:ignore="MissingConstraints"/>


</androidx.constraintlayout.widget.ConstraintLayout>